<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_knowledge_ponit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <Chronometer
            android:id="@+id/chronometer_activity_knowledge_ponit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/x10"
            android:drawableLeft="@drawable/icon_test_timer"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:textColor="@color/themeColor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_activity_knowledge_ponit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/icon_h_paper" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_knowledge_point"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_activity_knowledge_point_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_activity_knowledge_point_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/toolBar"
            android:text="无"
            android:textColor="@color/themeColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_activity_knowledge_point_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/toolBar"
            android:text="下一题"
            android:textColor="@color/themeColor"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>