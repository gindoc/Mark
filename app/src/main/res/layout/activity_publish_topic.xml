<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_activity_publish_topic"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_activity_publish_topic_plate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/blackFontColor"
            android:text="设置板块、标签" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/frag_right_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrayDivider" />

    <EditText
        android:id="@+id/et_activity_publish_topic_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/transparent"
        android:textColorHint="@color/blackFontColor"
        android:hint="一句话说明你遇到的问题或分享的经验"
        android:padding="@dimen/x10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrayDivider" />

    <EditText
        android:id="@+id/et_activity_publish_topic_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="start"
        android:hint="输入你想发表的内容"
        android:padding="@dimen/x10"
        android:textSize="16sp" />
</LinearLayout>