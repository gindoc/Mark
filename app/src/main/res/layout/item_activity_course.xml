<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_activity_course_logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/nowcoder_ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tv_activity_course_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/icon_paper_name"
                android:drawablePadding="10dp"
                android:text="BAT面试算法精品课"/>

            <TextView
                android:id="@+id/tv_activity_course_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_paper_question_cnt"
                android:drawablePadding="10dp"
                android:text="共12章"/>

            <TextView
                android:id="@+id/tv_activity_course_ppts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_course_download"
                android:drawablePadding="10dp"
                android:text="8913人练习"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>