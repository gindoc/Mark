<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="10dp">

    <View
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_marginLeft="7dp"
        android:background="@color/themeColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_child_question_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/item_child_left_image"
            android:text="    数组"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="练习"
            android:textColor="@color/themeColor"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/view_item_child_link_line"
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_marginLeft="7dp"
            android:background="@color/themeColor" />

        <TextView
            android:id="@+id/tv_item_child_question_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="共150道"/>

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/grayFontColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_item_child_doned_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已练习10题"/>

        <View
            android:id="@+id/view_item_child_should_hide"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/grayFontColor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tv_item_child_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确率40.00%"/>
    </LinearLayout>


</LinearLayout>