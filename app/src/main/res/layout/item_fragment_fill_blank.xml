<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/x25"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_fragment_fill_blank_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="@dimen/x10"
        android:textColor="@color/blackFontColor"
        tools:text="(1)"/>

    <EditText
        android:id="@+id/et_item_fragment_fill_blank_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textCursorDrawable="@drawable/cursor"
        android:hint="请输入答案"
        android:drawableBottom="@drawable/edittext_background"/>

</LinearLayout>