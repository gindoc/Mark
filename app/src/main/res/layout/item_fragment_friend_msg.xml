<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.cwenhui.mark.widget.RoundImageView
            android:id="@+id/iv_item_fragment_friend_msg_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/nowcoder_ic_launcher" />

        <ImageView
            android:id="@+id/iv_item_fragment_friend_msg_new_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_fragment_friend_msg_img"
            android:layout_alignTop="@+id/iv_item_fragment_friend_msg_img"
            android:src="@drawable/new_message" />

        <TextView
            android:id="@+id/tv_item_fragment_friend_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_fragment_friend_msg_new_msg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="通知"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/frag_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
